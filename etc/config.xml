<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <buy_now_button>
            <general>
                <enable>0</enable>
                <button_title>Buy Now</button_title>
                <keep_cart_products>1</keep_cart_products>
                <show_on_listing_page>1</show_on_listing_page>
                <show_on_product_detail_page>1</show_on_product_detail_page>
                <show_on_wishlist_product>1</show_on_wishlist_product>
                <show_on_compare_list_product>1</show_on_compare_list_product>
                <show_on_related_product>1</show_on_related_product>
                <show_on_upsell_product>1</show_on_upsell_product>
                <show_on_cross_sell_product>1</show_on_cross_sell_product>
                <show_on_widget_product>1</show_on_widget_product>
            </general>
        </buy_now_button>
    </default>
</config>
